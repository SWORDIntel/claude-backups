# Python 3.12 Testing Environment
FROM python:3.12-slim-bullseye

LABEL python.version="3.12"
LABEL test.environment="python312"

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    PYTHON_VERSION=3.12

RUN groupadd -r claudetest && useradd -r -g claudetest -m -d /home/claudetest claudetest

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    gcc \
    libc6-dev \
    libffi-dev \
    libssl-dev \
    make \
    pkg-config \
    procps \
    redis-server \
    sqlite3 \
    strace \
    time \
    htop \
    sysstat \
    valgrind \
    perf-tools-unstable \
    && rm -rf /var/lib/apt/lists/*

COPY requirements-test.txt /tmp/
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r /tmp/requirements-test.txt

WORKDIR /app
RUN mkdir -p \
    /app/tests \
    /app/logs \
    /app/data \
    /app/results \
    /app/monitoring

COPY claude_unified_hook_system_v2.py /app/
COPY test-fixtures/ /app/test-fixtures/

RUN chown -R claudetest:claudetest /app /home/claudetest

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import claude_unified_hook_system_v2; print('OK')" || exit 1

USER claudetest

CMD ["python", "-m", "pytest", "-v", "/app/tests/", "--tb=short"]