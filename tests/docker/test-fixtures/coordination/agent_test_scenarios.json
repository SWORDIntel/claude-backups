    "priority_based_execution": {
      "description": "Test priority-based agent execution",
      "scenarios": [
        {
          "input": "critical security breach detected",
          "expected_agents": ["GHOST-PROTOCOL-AGENT", "SECURITY", "DIRECTOR"],
          "expected_priorities": ["CRITICAL", "CRITICAL", "CRITICAL"],
          "expected_execution_order": "priority_first"
