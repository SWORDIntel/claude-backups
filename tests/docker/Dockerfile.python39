# Python 3.9 Testing Environment
FROM python:3.9-slim-bullseye

# Inherit base configuration
LABEL python.version="3.9"
LABEL test.environment="python39"

# Environment variables specific to 3.9
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    PYTHON_VERSION=3.9

# Create test user
RUN groupadd -r claudetest && useradd -r -g claudetest -m -d /home/claudetest claudetest

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    gcc \
    libc6-dev \
    libffi-dev \
    libssl-dev \
    make \
    pkg-config \
    procps \
    redis-server \
    sqlite3 \
    strace \
    time \
    htop \
    sysstat \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements-test.txt /tmp/
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r /tmp/requirements-test.txt

# Create directory structure
WORKDIR /app
RUN mkdir -p \
    /app/tests \
    /app/logs \
    /app/data \
    /app/results \
    /app/monitoring

# Copy hook system for testing
COPY claude_unified_hook_system_v2.py /app/
COPY test-fixtures/ /app/test-fixtures/

# Set ownership
RUN chown -R claudetest:claudetest /app /home/claudetest

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import claude_unified_hook_system_v2; print('OK')" || exit 1

USER claudetest

# Run tests by default
CMD ["python", "-m", "pytest", "-v", "/app/tests/", "--tb=short"]