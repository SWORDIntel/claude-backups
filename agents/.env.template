# Claude Agent Communication System - Environment Configuration Template
# Copy to .env and customize for your deployment

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================
COMPOSE_PROJECT_NAME=claude-agents
COMPOSE_PROFILES=production
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ============================================================================
# ULTRA-FAST PROTOCOL CONFIGURATION
# ============================================================================

# Core Protocol Settings
UFP_VERSION=3.0.0
UFP_MAX_AGENTS=28
UFP_MAX_PAYLOAD_SIZE=16777216
UFP_SHARED_MEMORY_SIZE=67108864
UFP_RING_BUFFER_SIZE=16777216
UFP_MESSAGE_POOL_SIZE=10000

# Performance Tuning
UFP_WORKER_THREADS=8
UFP_CPU_AFFINITY_MASK=0xFF
UFP_NUMA_OPTIMIZATION=true
UFP_COMPRESSION_ENABLED=true
UFP_COMPRESSION_MIN_SIZE=1024

# Protocol Endpoints
MESSAGE_ROUTER_HOST=message-router
MESSAGE_ROUTER_PORT=8081
MESSAGE_ROUTER_ADMIN_PORT=8080

# Logging and Debugging
UFP_LOG_LEVEL=INFO
UFP_ENABLE_METRICS=true
UFP_ENABLE_TRACING=false
UFP_DEBUG_MODE=false

# ============================================================================
# AGENT SYSTEM CONFIGURATION
# ============================================================================

# Directory Structure
AGENT_HOME=/app
AGENT_DATA_DIR=/app/data
AGENT_CONFIG_DIR=/app/config
AGENT_LOG_DIR=/app/logs
AGENT_MODEL_DIR=/app/models

# Agent Discovery
AGENT_DISCOVERY_MODE=multicast
AGENT_DISCOVERY_INTERVAL=30
AGENT_HEARTBEAT_INTERVAL=10
AGENT_TIMEOUT_SECONDS=60

# Agent Resource Limits (per container)
AGENT_DEFAULT_MEMORY_LIMIT=2G
AGENT_DEFAULT_CPU_LIMIT=1.0
AGENT_DEFAULT_MEMORY_RESERVATION=1G
AGENT_DEFAULT_CPU_RESERVATION=0.5

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Docker Networks
AGENT_INTERNAL_NETWORK=172.20.0.0/16
AGENT_EXTERNAL_NETWORK=172.21.0.0/16
AGENT_BRIDGE_NAME=claude-agents

# Port Ranges
AGENT_PORT_RANGE_START=8080
AGENT_PORT_RANGE_END=8999
WEB_UI_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Container Security
SECURITY_NO_NEW_PRIVILEGES=true
SECURITY_READ_ONLY_ROOT=false
SECURITY_ENABLE_APPARMOR=true
SECURITY_ENABLE_SECCOMP=true

# Authentication (change these!)
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_12345
API_KEY=CHANGE_ME_API_KEY_67890
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASS_XYZ

# SSL/TLS
ENABLE_TLS=false
TLS_CERT_PATH=/app/certs/tls.crt
TLS_KEY_PATH=/app/certs/tls.key
TLS_CA_PATH=/app/certs/ca.crt

# ============================================================================
# VOICE RECOGNITION SYSTEM
# ============================================================================

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_DURATION=0.5
AUDIO_ENERGY_THRESHOLD=0.01

# Intel Hardware Acceleration
INTEL_GNA_ENABLED=1
INTEL_NPU_ENABLED=1
GNA_DEVICE_MODE=GNA_HW
GNA_PRECISION=I16
NPU_PERFORMANCE_HINT=THROUGHPUT

# Voice Recognition Parameters
VOICE_LANGUAGE=en-US
VOICE_IDENTIFICATION_THRESHOLD=0.75
VOICE_VERIFICATION_THRESHOLD=0.85
VOICE_PAUSE_THRESHOLD=0.8

# Model Paths
VOICE_ACOUSTIC_MODEL_PATH=/app/models/acoustic/model.onnx
VOICE_LANGUAGE_MODEL_PATH=/app/models/language/lm.bin
VOICE_BIOMETRIC_MODEL_PATH=/app/models/biometric/speaker.model

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Primary Database
DATABASE_URL=postgresql://claude_user:CHANGE_ME_DB_PASS@database:5432/claude_agents
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=10
REDIS_TTL=3600

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=7d
PROMETHEUS_RETENTION_SIZE=10GB
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASS
GRAFANA_ALLOW_SIGN_UP=false
GRAFANA_DISABLE_GRAVATAR=true

# Jaeger Tracing
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=probabilistic
JAEGER_SAMPLER_PARAM=0.1

# Log Levels
LOG_LEVEL=INFO
RUST_LOG=info
PYTHONPATH=/app/python

# ============================================================================
# MACHINE LEARNING CONFIGURATION
# ============================================================================

# ML Framework Settings
TENSORFLOW_ENABLE_ONEDNN_OPTS=1
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4
OPENBLAS_NUM_THREADS=4

# CUDA Configuration (if available)
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=0
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Model Training
ML_BATCH_SIZE=32
ML_LEARNING_RATE=0.001
ML_MAX_EPOCHS=100
ML_EARLY_STOPPING_PATIENCE=10

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development Tools (only for dev environment)
DEV_MODE=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_HOT_RELOAD=false
ENABLE_PROFILING=false

# Code Quality
ENABLE_CODE_COVERAGE=false
COVERAGE_THRESHOLD=80
ENABLE_LINTING=true
ENABLE_SECURITY_SCAN=true

# Testing
RUN_TESTS_ON_BUILD=false
TEST_TIMEOUT=300
ENABLE_INTEGRATION_TESTS=false

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# S3-Compatible Storage for Backups
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=claude-agents-backup
S3_ACCESS_KEY=CHANGE_ME_S3_ACCESS
S3_SECRET_KEY=CHANGE_ME_S3_SECRET
S3_REGION=us-east-1

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Memory Management
MALLOC_ARENA_MAX=4
MALLOC_MMAP_THRESHOLD=131072
MALLOC_TRIM_THRESHOLD=131072

# CPU Scheduling
SCHED_POLICY=SCHED_OTHER
CPU_GOVERNOR=performance

# I/O Optimization
IO_SCHEDULER=mq-deadline
READAHEAD_KB=128

# Network Tuning
TCP_CONGESTION_CONTROL=bbr
NET_CORE_SOMAXCONN=65535
NET_CORE_NETDEV_MAX_BACKLOG=5000

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@yourcompany.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASS
SMTP_FROM_ADDRESS=claude-agents@yourcompany.com

# Webhook Notifications
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET

# External APIs
OPENAI_API_KEY=CHANGE_ME_OPENAI_KEY
ANTHROPIC_API_KEY=CHANGE_ME_ANTHROPIC_KEY

# ============================================================================
# TIMEZONE & LOCALE
# ============================================================================

TZ=UTC
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# ============================================================================
# CUSTOM VARIABLES
# ============================================================================

# Add your custom environment variables here
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2