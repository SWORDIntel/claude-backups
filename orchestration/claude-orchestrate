#!/bin/bash
# ============================================================================
# CLAUDE ORCHESTRATION WRAPPER
# 
# Seamless integration with existing Claude Code workflows
# Automatically detects when orchestration would be beneficial
# ============================================================================

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BRIDGE_SCRIPT="$SCRIPT_DIR/claude-orchestration-bridge.py"

# Check if orchestration is disabled
if [ "${CLAUDE_ORCHESTRATION,,}" = "off" ]; then
    exit 0
fi

# Pass all arguments to the Python bridge
python3 "$BRIDGE_SCRIPT" "$@"