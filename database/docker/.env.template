# Claude Agent Framework - Docker Environment Configuration
# Copy this file to .env and customize the values

# PostgreSQL Configuration
POSTGRES_USER=claude_agent
POSTGRES_PASSWORD=claude_secure_password_change_me
POSTGRES_DB=claude_agents_auth

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security Settings
SECRET_KEY=your_secret_key_here_minimum_32_characters

# Performance Tuning
MAX_WORKERS=4
REDIS_MAX_CONNECTIONS=100

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9091

# Development Settings (set to false in production)
DEBUG=false
RELOAD=false