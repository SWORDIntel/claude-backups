FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    asyncpg \
    psycopg2-binary \
    watchdog \
    numpy \
    scikit-learn \
    joblib \
    fastapi \
    uvicorn \
    prometheus-client \
    aiofiles

WORKDIR /app

# Copy learning system files
COPY ../agents/src/python/ /app/agents/src/python/
COPY ../sync_learning_data.py /app/
COPY learning_dashboard.py /app/
COPY learning_api.py /app/

# Create directories
RUN mkdir -p /app/learning_data /app/logs

# Expose ports
EXPOSE 8080 8081 9090

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Start learning system
CMD ["python3", "-m", "uvicorn", "learning_api:app", "--host", "0.0.0.0", "--port", "8080"]