# Docker Test Environment for Claude Unified Hook System
# TESTBED Agent - Containerized Test Execution

FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV DOCKER_CONTAINER=true
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Create non-root user for security
RUN groupadd -r testuser && useradd -r -g testuser testuser

# Copy requirements first for better caching
COPY requirements-test.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-test.txt

# Copy test files and source
COPY claude_unified_hook_system_v2.py .
COPY test_*.py .
COPY conftest.py .
COPY test_fixtures.py .
COPY test_runner.py .
COPY pytest.ini .
COPY Makefile .

# Create necessary directories
RUN mkdir -p test_results htmlcov temp agents config cache logs

# Create basic project structure for tests
RUN echo "# Test Project" > CLAUDE.md && \
    mkdir -p agents && \
    echo "---\nname: TEST_AGENT\ndescription: Test agent\ncategory: test\nstatus: ACTIVE\n---\n# Test Agent" > agents/TEST_AGENT.md

# Set ownership to test user
RUN chown -R testuser:testuser /app

# Switch to non-root user
USER testuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import claude_unified_hook_system_v2; print('OK')" || exit 1

# Default command
CMD ["make", "test-all"]

# Build command:
# docker build -t claude-hooks-test -f Dockerfile.test .
#
# Run command:  
# docker run --rm -v $(pwd)/test_results:/app/test_results claude-hooks-test
#
# Interactive testing:
# docker run --rm -it -v $(pwd)/test_results:/app/test_results claude-hooks-test bash
#
# Specific test suite:
# docker run --rm -v $(pwd)/test_results:/app/test_results claude-hooks-test make test-unit
#
# With coverage:
# docker run --rm -v $(pwd)/test_results:/app/test_results -v $(pwd)/htmlcov:/app/htmlcov claude-hooks-test make test-coverage