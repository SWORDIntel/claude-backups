# Database Configuration
# Use relative paths or configure based on your installation directory
POSTGRES_HOST=./database/data/run
POSTGRES_PORT=5433
POSTGRES_DB=claude_auth
POSTGRES_USER=claude_auth
POSTGRES_PASSWORD=claude_auth_pass

# Learning System Configuration
LEARNING_MODE=adaptive
AUTO_INITIALIZE=true
ENABLE_MONITORING=true
ENABLE_ML_MODELS=true
ENABLE_DEEP_LEARNING=false

# Agent System Paths
# PROJECT_ROOT will be auto-detected by scripts, or set it manually
AGENT_BASE_PATH=./agents
PYTHONPATH=./agents/src/python:$PYTHONPATH

# Feature Flags
ENABLE_DEPRECATED_MIGRATION=true
ENABLE_AUTO_PORT_DETECTION=true
ENABLE_POSTGRESQL_17_FEATURES=true
