# Docker Environment Configuration for Hybrid Bridge Integration
# Copy to .env and customize as needed

# Docker PostgreSQL Configuration
POSTGRES_USER=claude_user
POSTGRES_PASSWORD=claude_secure_pass
POSTGRES_DB=claude_auth
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Native PostgreSQL Configuration (fallback)
NATIVE_POSTGRES_USER=postgres
NATIVE_POSTGRES_PASSWORD=
NATIVE_POSTGRES_DB=postgres

# Socket PostgreSQL Configuration (if available)
SOCKET_POSTGRES_USER=postgres
SOCKET_POSTGRES_DB=postgres

# System Configuration
NATIVE_ONLY_MODE=false
DOCKER_TIMEOUT=120
HEALTH_CHECK_INTERVAL=30

# Learning System Configuration
LEARNING_ENV=docker
PYTHONUNBUFFERED=1

# Performance Targets
TARGET_AUTH_PER_SECOND=2000
TARGET_P95_LATENCY_MS=25
TARGET_UPTIME_PERCENT=99.9