# Claude Agent Framework Docker Environment Configuration
# Copy this file to .env and customize the values

# PostgreSQL Configuration
POSTGRES_PASSWORD=secure_production_password_change_me
POSTGRES_DB=claude_agents_auth
POSTGRES_USER=claude_agent

# Learning System Configuration  
LEARNING_SYSTEM_MODE=production
LOG_LEVEL=info
METRICS_ENABLED=true

# Network Configuration
CLAUDE_NETWORK_SUBNET=172.20.0.0/16

# External Port Configuration (avoid conflicts)
POSTGRES_EXTERNAL_PORT=5433
LEARNING_API_PORT=8080
AGENT_BRIDGE_PORT=8081
PROMETHEUS_PORT=9091

# Volume Configuration
POSTGRES_DATA_PATH=./database/data/postgresql
LEARNING_DATA_PATH=./database/learning_data

# Performance Tuning
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB

# Security Configuration
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoring Configuration
PROMETHEUS_RETENTION_TIME=30d
METRICS_COLLECTION_INTERVAL=15s

# Development/Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false